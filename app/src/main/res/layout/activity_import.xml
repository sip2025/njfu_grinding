<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<androidx.appcompat.widget.Toolbar
android:id="@+id/toolbar"
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize"
android:background="@color/primary"
android:elevation="4dp"
app:title="@string/import_questions"
app:titleTextColor="@color/white" />
<ScrollView
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="24dp">
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="科目名称"
android:textStyle="bold"
android:textSize="14sp"
android:textColor="@color/black" />
<com.google.android.material.textfield.TextInputLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:layout_marginBottom="24dp">
<EditText
android:id="@+id/subject_name_input"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="例如: 科目一"
android:inputType="text" />
</com.google.android.material.textfield.TextInputLayout>
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="标签颜色"
android:textStyle="bold"
android:textSize="14sp"
android:textColor="@color/black" />
<HorizontalScrollView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:layout_marginBottom="24dp"
android:scrollbars="none">
<LinearLayout
android:id="@+id/color_picker_container"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical">
</LinearLayout>
</HorizontalScrollView>
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="选择题库文件"
android:textStyle="bold"
android:textSize="14sp"
android:textColor="@color/black" />
<Button
android:id="@+id/select_file_button"
android:layout_width="match_parent"
android:layout_height="48dp"
android:layout_marginTop="8dp"
android:layout_marginBottom="24dp"
android:text="点击选择文件"
android:backgroundTint="@color/accent" />
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="背景图片链接(可选)"
android:textStyle="bold"
android:textSize="14sp"
android:textColor="@color/black" />
<com.google.android.material.textfield.TextInputLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:layout_marginBottom="24dp">
<EditText
android:id="@+id/image_url_input"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="输入图片链接"
android:inputType="textUri" />
</com.google.android.material.textfield.TextInputLayout>
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="AI处理选项"
android:textStyle="bold"
android:textSize="14sp"
android:textColor="@color/black"
android:layout_marginBottom="8dp" />
<RadioGroup
android:id="@+id/ai_process_radio_group"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp">
<RadioButton
android:id="@+id/radio_no_ai"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="不进行任何处理"
android:checked="true" />
<RadioButton
android:id="@+id/radio_generate_explanations"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="后台生成AI解析（原始题库仅包含答案）" />
</RadioGroup>
<TextView
android:id="@+id/concurrency_label"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="并发处理数: 5"
android:textStyle="bold"
android:textSize="14sp"
android:textColor="@color/black"
android:layout_marginBottom="8dp"
android:visibility="gone" />
<SeekBar
android:id="@+id/concurrency_seekbar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:max="100"
android:progress="5"
android:layout_marginBottom="16dp"
android:visibility="gone" />
<TextView
android:id="@+id/ai_process_hint"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="提示: AI处理将在后台进行,您可以在主界面查看进度"
android:textSize="12sp"
android:textColor="@color/gray"
android:layout_marginBottom="24dp"
android:visibility="gone" />
<ProgressBar
android:id="@+id/progress_bar"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="24dp"
android:visibility="gone" />
<Button
android:id="@+id/import_button"
android:layout_width="match_parent"
android:layout_height="48dp"
android:text="@string/import_questions"
android:textColor="@color/white"
android:backgroundTint="@color/primary" />
</LinearLayout>
</ScrollView>
</LinearLayout>