<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.examapp.controller.QuestionDetailsDialogController"
            prefWidth="600" prefHeight="450" style="-fx-background-color: #f4f7f9;">
    <header>
        <VBox spacing="5.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="questionTypeLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="[题型]"/>
                        <Label fx:id="subjectNameLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="所属题库"/>
                    </children>
                </HBox>
                <Label fx:id="questionTextLabel" style="-fx-font-size: 16px;" wrapText="true"
                       text="这里是问题文本，它可能会很长很长很长很长很长很长很长很长很长很长很长。"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </header>
    <content>
        <VBox spacing="15.0">
            <children>
                <Separator/>
                <VBox fx:id="optionsContainer" spacing="8.0">
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </VBox>
                <Separator/>
                <VBox spacing="8.0">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="正确答案："/>
                        <Label fx:id="answerLabel" style="-fx-font-size: 14px; -fx-text-fill: #4CAF50;"
                               text="A"/>
                    </children>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </VBox>
                <VBox fx:id="explanationPane" spacing="8.0" managed="false" visible="false">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="题目解析："/>
                        <Label fx:id="explanationLabel" style="-fx-font-size: 14px; -fx-text-fill: #333;"
                               wrapText="true" text="这里是解析内容。"/>
                    </children>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </VBox>
            </children>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType text="关闭" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>