<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.examapp.controller.SettingsController"
            stylesheets="@../css/style.css">
    
    <top>
        <ToolBar>
            <Button text="← 返回" onAction="#handleBack" />
            <Separator orientation="VERTICAL" />
            <Label text="设置" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
        </ToolBar>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" style="-fx-padding: 20;">
                <VBox styleClass="card" spacing="15">
                    <Label text="AI答疑设置" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Button text="配置AI答疑" onAction="#handleAISettings" prefWidth="200" />
                </VBox>
                
                <VBox styleClass="card" spacing="15">
                    <Label text="关于" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Button text="关于本软件" onAction="#handleAbout" prefWidth="200" />
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>