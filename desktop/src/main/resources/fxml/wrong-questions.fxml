<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.examapp.controller.WrongQuestionsController"
            stylesheets="@../css/style.css"
            prefHeight="800.0" prefWidth="1200.0">
    
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="backButton" text="返回" onAction="#handleBack"/>
                <Label fx:id="titleLabel" text="我的错题本" styleClass="title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="clearAllButton" text="清空错题本" onAction="#handleClearAll" styleClass="danger-button"/>
            </HBox>
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <VBox spacing="15" style="-fx-padding: 20 20 5 20;" VBox.vgrow="ALWAYS">
                <Label fx:id="countLabel" text="共 0 道错题" style="-fx-font-size: 1.2em; -fx-text-fill: #555;"/>
                <ListView fx:id="wrongQuestionsListView" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;"/>
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>